{
  "name": "server-node",
  "description": "This is a nodeJS boilerplate with Loopback",
  "version": "1.0.0",
  "license": "LicenseRef-LICENSE",
  "private": true,
  "main": "server/server.js",
  "dependencies": {
    "compression": "~1.6.1",
    "cors": "~2.7.1",
    "helmet": "~0.14.0",
    "loopback": "~2.26.2",
    "loopback-boot": "~2.16.0",
    "loopback-component-explorer": "~2.3.0",
    "loopback-connector-mongodb": "^1.13.3",
    "loopback-datasource-juggler": "~2.45.0",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "istanbul": "^0.4.2",
    "jscs": "^2.10.1",
    "jshint": "^2.5.6",
    "mocha": "^2.4.5",
    "mocha-bamboo-reporter": "^1.1.0",
    "node-inspector": "^0.12.7",
    "nodemon": "^1.9.0",
    "nsp": "^2.1.0",
    "should": "~8.2.2",
    "supertest": "~1.2.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "scripts": {
    "autoformat": "jscs -x .",
    "start": "node .",
    "startDev": "npm install && concurrently \"node-inspector --web-port 9090\" \"nodemon --debug .\"",
    "pretest": "jshint . && jscs .",
    "test": "istanbul cover --include-all-sources _mocha -- -R mocha-bamboo-reporter --reporter-options output=./test/server-bamboo-test-outputs.json",
    "posttest": "nsp check"
  },
  "engines": {
    "node": "=5.0.0"
  }
}
